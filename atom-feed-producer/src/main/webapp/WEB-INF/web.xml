<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<listener>
		<listener-class>com.github.nordinh.atomfeed.producer.metrics.AtomFeedProducerServletMetricsContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.github.nordinh.atomfeed.producer.metrics.AtomFeedProducerHealthCheckContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.github.nordinh.atomfeed.producer.metrics.AtomFeedProducerInstrumentedMetricsContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>instrumentedFilter</filter-name>
		<filter-class>com.codahale.metrics.servlet.InstrumentedFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>instrumentedFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>metrics</servlet-name>
		<servlet-class>com.codahale.metrics.servlets.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>metrics</servlet-name>
		<url-pattern>/metrics/*</url-pattern>
	</servlet-mapping>
</web-app>